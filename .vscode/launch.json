{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "start",
      "type": "node",
      "request": "launch",
      "console": "internalConsole",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "TS_NODE_IGNORE": "false"
      },
      "args": [
        "${workspaceRoot}/src/index.ts"
      ]
    }
  ]
}